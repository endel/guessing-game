<table border="0" cellspacing="5" cellpadding="5">
  <thead>
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Score</th>
    </tr>
  </thead>
  <tbody>
    <% @ranking.each_with_index do |user, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= user.name %></td>
      <td><%= user.total_score %></td>
    </tr>
    <% end %>
  </tbody>
</table>

  
