<%= javascript_tag do %>
$(document).ready(function(){
  $('#start .checkbox').selectable({
    class: 'selected'
  })
});


<% end %>

<div id="start">
<%= form_tag game_play_path, :method => :get do %>
  <% @matters.each do |m| %>
  <span class="checkbox">
    <%= check_box_tag "matters[]", m.id %>
    <%= m.name %>
  </span>
  <% end %>
<%= submit_tag "Let's play"%>
<% end %>
</div>